{
	"compilerOptions": {
		"target": "ESNext",
		"module": "Preserve",
		"moduleResolution": "bundler",
		"strict": true,
		"noUnusedLocals": true,
		"verbatimModuleSyntax": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"jsx": "preserve",
		"jsxImportSource": "solid-js",
		"outDir": "./dist",
		"rootDir": "./src",
		"types": ["node"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
